{
    "name": "Mnist_LeNet",
    "n_gpu": 1,

    "arch": {
        "type": "DENAModel",
        "args": {}
    },
    "data_loader": {
        "type": "DENADataLoader",
        "args":{
            "hdf5_dir": "/home/haopei/DENA/features",
			"file_list": "/home/haopei/DENA/sample_records.txt",
			"dataset": "DENA_dataset",
            "batch_size": 64,
            "shuffle": true,
            "validation_split": 0.3,
            "num_workers": 16
        }
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 0.001,
            "weight_decay": 0,
            "amsgrad": true
        }
    },
    "loss": "CE_loss",
    "metrics": [
        "accuracy", "AUC"
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 50,
            "gamma": 0.1
        }
    },
    "trainer": {
        "epochs": 10,

        "save_dir": "/home/haopei/step3_train_model/result",
        "save_period": 1,
        "verbosity": 2,
        
        "monitor": "min val_loss",
        "early_stop": 3,

        "tensorboard": true
    }
}
